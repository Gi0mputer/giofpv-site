{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "options": {
                "shell": {
                    "executable": "C:\\\\Windows\\\\System32\\\\cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting...",
                    "endsPattern": "Ready in"
                }
            }
        }
    ]
}
